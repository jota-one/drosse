.summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 4rem;

  h2 {
    margin: 0;
    padding: 1rem 2rem 0;
    text-align: center;
    font-size: 1.3rem;
    font-weight: 400;
  }

  & > div {
    display: flex;
    flex-direction: column;

    @media (--l) {
      flex-direction: row;
    }

    p {
      padding: 0 3rem 1rem;
    }
  }
}
