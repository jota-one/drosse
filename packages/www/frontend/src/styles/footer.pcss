footer {
    background: var(--c-gray-light);

    .dark & {
        background: var(--c-gray-darker);
    }
    
    .container {
        display: flex;
        flex-direction: row;
        alig-items: center;
        padding: 3rem;
        border-top: 1px dashed var(--c-green);
    }

    a {
        color: var(--c-green);

        &:hover {
            color: var(--c-gray);

            .dark & {
                color: var(--c-gray-light);
            }
        }

        &:first-child {
            margin-right: 1rem;
        }
    }
}