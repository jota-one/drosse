a.more {
    @apply inline-flex items-center text-xs font-bold uppercase block mt-6 text-green-700;
}

a.more svg {
    margin-top: -0.1rem;
    margin-left: 0.4rem;
    transition: color 0.1s ease-in-out, margin 0.1s ease-in-out;
}

a.more:hover {
    @apply text-green-500;
}

a.more:hover svg {
    margin-left: 0.7rem;
}