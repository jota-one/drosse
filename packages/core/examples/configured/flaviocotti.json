{
  "api": {
    "users": {
      "DROSSE": {
        "throttle": {
          "min": 3000,
          "max": 3000
        },
        "get": {
          "body": [{
            "id": 1,
            "name": "Tadai"
          }, {
            "id": 2,
            "name": "Jorinho"
          }]
        }
      },
      ":id": {
        "DROSSE": {
          "get": {
            "body": {
              "id": "{id}",
              "name": "User {id}"
            }
          }
        },
        "activate": {
          "DROSSE": {
            "post": {
              "service": true,
              "body": {}
            }
          }
        }
      }
    },
    "countries": {
      "DROSSE": {
        "proxy": {
          "target": "https://restcountries.eu/rest/v2",
          "headers": {
            "x-user": "Luke",
            "x-roles": "jedi,pilot"
          }
        }
      },
      "name": {
        "switzerland": {
          "DROSSE": {
            "get": {
              "body": {
                "name": "Switzerland",
                "description": "Best country in the World!"
              }
            }
          }
        }
      }
    },
    "countries-slow": {
      "DROSSE": {
        "proxy": {
          "target": "https://restcountries.eu/rest/v2",
          "headers": {
            "X-User": "123456-1",
            "X-Roles": "customer,blabla"
          }
        },
        "throttle": {
          "min": 2000,
          "max": 4000
        }
      }
    }
  }
}
